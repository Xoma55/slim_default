

<div class="top-bar">
    <div class="top-bar-left">
        <ul class="dropdown menu" data-dropdown-menu>
            <li class="menu-text">Моя компания</li>

            <li><a href="{{ path_for('home') }}">Home</a></li>
        </ul>
    </div>
    <div class="top-bar-right">

        <ul class="dropdown menu" data-dropdown-menu>

            {% if auth.check %}

                <li>
                    <a href="#">{{ auth.user.name }}</a>
                    <ul class="menu vertical">
                        <li><a href="{{ path_for('auth.password.change') }}">Смена пароля</a></li>
                        <li><a href="{{ path_for('auth.signout') }}">Выход</a></li>

                    </ul>
                </li>

            {% else %}

                <li><a href="{{ path_for('auth.signup') }}">Регистрация</a></li>
                <li><a href="{{ path_for('auth.signin') }}">Вход</a></li>

            {% endif %}

        </ul>
    </div>
