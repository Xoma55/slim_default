{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row" id="sign-up">

        <div class="medium-6 medium-offset-3">
            <div class="panel callout radius">
                <h5>Регистрация</h5>

                <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">

                    <label for="email">E-Mail
                        <input class="{{ errors.email?'is-invalid-input':''}}" type="text" name="email" id="email"
                               placeholder="your@email.com"  value="{{ old.email }}">
                        {% if errors.email %}
                            <span class="form-error is-visible">{{ errors.email | first }}</span>
                        {% endif %}
                    </label>

                    <label for="name">Имя
                        <input class="{{ errors.name?'is-invalid-input':''}}" type="text"
                               name="name" id="name" value="{{ old.name }}">
                        {% if errors.name %}
                            <span class="form-error is-visible">{{ errors.name | first }}</span>
                        {% endif %}
                    </label>

                    <label for="password">Пароль
                        <input class="{{ errors.password?'is-invalid-input':''}}" type="password"
                               name="password" id="password" value="{{ old.password }}">
                        {% if errors.password %}
                            <span class="form-error is-visible">{{ errors.password | first }}</span>
                        {% endif %}
                    </label>

                    <button type="submit" class="button">Подтвердить</button>

                    {{ csrf.field | raw }}

                </form>

            </div>
        </div>

    </div>

{% endblock %}