{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row" id="sign-up">

        <div class="medium-6 medium-offset-3">
            <div class="panel callout radius">
                <h5>Смена пароля</h5>

                <form action="{{ path_for('auth.password.change') }}" method="post" autocomplete="off">

                    <label for="password_old">Текущий пароль
                        <input class="{{ errors.password_old?'is-invalid-input':''}}" type="password"
                               name="password_old" id="password_old" >
                        {% if errors.password_old %}
                            <span class="form-error is-visible">{{ errors.password_old | first }}</span>
                        {% endif %}
                    </label>

                    <label for="password">Пароль
                        <input class="{{ errors.password?'is-invalid-input':''}}" type="password"
                               name="password" id="password" >
                        {% if errors.password %}
                            <span class="form-error is-visible">{{ errors.password | first }}</span>
                        {% endif %}
                    </label>

                    <button type="submit" class="button">Подтвердить</button>

                    {{ csrf.field | raw }}

                </form>

            </div>
        </div>

    </div>

{% endblock %}